<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboarding1Fragment">

    <fragment
        android:id="@+id/onboarding1Fragment"
        android:name="eus.ainhizearrese.fragmentsactivity.Onboarding1Fragment"
        android:label="fragment_onboarding1"
        tools:layout="@layout/fragment_onboarding1" >
        <action
            android:id="@+id/action_onboarding1Fragment_to_onboarding2Fragment2"
            app:destination="@id/onboarding2Fragment2"
            app:enterAnim="@anim/in_right_fade"
            app:exitAnim="@anim/out_left_fade" />
    </fragment>
    <fragment
        android:id="@+id/onboarding2Fragment2"
        android:name="eus.ainhizearrese.fragmentsactivity.Onboarding2Fragment"
        android:label="fragment_onboarding2"
        tools:layout="@layout/fragment_onboarding2" >
        <action
            android:id="@+id/action_onboarding2Fragment2_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/in_up_fade"
            app:exitAnim="@anim/out_right_fade" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="eus.ainhizearrese.fragmentsactivity.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_onboarding1Fragment"
            app:destination="@id/onboarding1Fragment"
            app:enterAnim="@anim/in_left_fade"
            app:exitAnim="@anim/out_down_fade" />
    </fragment>
</navigation>